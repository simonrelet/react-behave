{
  "name": "react-libraries-workspace",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "lint": "run-s lint:*",
    "lint:format": "prettier --list-different \"**/*.{js,json,md}\"",
    "lint:js": "eslint ."
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "eslint": "^5.8.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.1"
  }
}
